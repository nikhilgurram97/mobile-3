<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <View
        android:id="@+id/reminder_item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="8dp"
        android:background="@color/dark_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <LinearLayout
            android:id="@+id/expansion_item_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <include layout="@layout/fragment_button_edit" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/expansion_item_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <include layout="@layout/fragment_button_delete" />
        </LinearLayout>
    </LinearLayout>

</merge>